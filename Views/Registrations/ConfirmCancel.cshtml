@model int
<h1>Confirm Cancellation</h1>
<p>Are you sure you want to cancel your registration for the event?</p>
<form method="post" asp-action="CancelRegistration" asp-controller="Registrations">
    <input type="hidden" name="eventId" value="@Model" />
    <button type="submit" class="btn btn-danger">Confirm Cancel</button>
    <a asp-action="MyEvents" class="btn btn-default">Cancel</a>
</form>

